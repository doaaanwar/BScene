{% extends 'adminLayout.html.twig' %}
{% block body %}
               
               <!-- Page Heading -->
               <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Dashboard <small>Statistics Overview</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> Dashboard
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
               
                <!-- /.row -->

                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-comments fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">{{commentCount}}</div>
                                        <div>New Comments!</div>
                                    </div>
                                </div>
                            </div>
                            <a href="#commentList">
                                <div class="panel-footer">
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-tasks fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">{{eventCount}}</div>
                                        <div>New Events!</div>
                                    </div>
                                </div>
                            </div>
                            <a href="#eventList">
                                <div class="panel-footer">
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-yellow">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-calendar fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">5</div>
                                        <div>Upcoming Events!</div>
                                    </div>
                                </div>
                            </div>
                            <a href="eventList.html">
                                <div class="panel-footer">
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-red">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-users fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">{{memberCount}}</div>
                                        <div>New Members!</div>
                                    </div>
                                </div>
                            </div>
                            <a href="#memberList">
                                <div class="panel-footer">
                                    <span class="pull-left">View Details</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Traffic Chart</h3>
                            </div>
                            <div class="panel-body">
                                <div id="morris-area-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

               <!-- row -->
                <div class="row">
                  
                     <div class="col-lg-4" >
	                        <div class="panel panel-default" id="commentList">
	                            <div class="panel-heading">
	                                <h3 class="panel-title"><i class="fa fa-comment fa-fw"></i>New Comment list</h3>
	                            </div>
	                            <div class="panel-body">
	                                <div class="table-responsive">
	                                   {% block commentList %}
                                               <!-- top 10 new comment list  -->
                                                      <div class="table-responsive">
                                                            {% if commentList != NULL %}
                                                            <table class="table table-bordered table-hover table-striped">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Comment</th>
                                                                        <th>Event</th>

                                                                    </tr>
                                                                </thead>
                                                                <tbody>

                                                                        {% for item in commentList %}

                                                                           <tr>
                                                                               <td>{{item.comment}}</td>
                                                                               <td>{{item.commentTime|date('Y-m-d\\TH:i:sP')}}</td>

                                                                           </tr>


                                                                        {%endfor%}



                                                                </tbody>
                                                            </table>
                                                            {%else%}
                                                                        {{commentMessage}}
                                                            {%endif%}
                                                        </div>
                                            {% endblock %}
                                            
	                                </div>
	                                <div class="text-right">
                                            
	                                    <a href="{{path('acmebscene_adminComment',{'lastLogin' : app.session.get('lastLogin') |date('Y-m-d\\TH:i:sP')}) }}">View All Comments <i class="fa fa-arrow-circle-right"></i></a>
	                                </div>
	                            </div>
	                       
                       
                       
                       
                       
                        </div>
                    </div>
                    <!-- -->
                    <div class="col-lg-4">
	                        <div class="panel panel-default" id="eventList">
	                            <div class="panel-heading">
	                                <h3 class="panel-title"><i class="fa fa-calendar fa-fw"></i>New Event list</h3>
	                            </div>
	                            <div class="panel-body">
	                                <div class="table-responsive">
	                                  {% block eventList %}
                                               <!-- top 10 new comment list  -->
                                                      <div class="table-responsive">
                                                            {% if eventList != NULL %}
                                                            <table class="table table-bordered table-hover table-striped">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Title</th>
                                                                        <th>Category</th>
                                                                         <th>Date</th>
                                                                        
                                                                    </tr>
                                                                </thead>
                                                                <tbody>

                                                                        {% for item in eventList %}

                                                                           <tr>
                                                                               <td>{{item.title}}</td>
                                                                               <td>{{item.category}}</td>
                                                                               <td>{{item.date|date('Y-m-d')}}</td>
                                                                           </tr>


                                                                        {%endfor%}



                                                                </tbody>
                                                            </table>
                                                            {%else%}
                                                                        {{newEventMessage}}
                                                            {%endif%}
                                                        </div>
                                            {% endblock %}
	                                </div>
	                                <div class="text-right">
	                                    <a href="{{path('meeting_admin_list',{'lastLogin' : app.session.get('lastLogin') |date('Y-m-d\\TH:i:sP')}) }}">View All Events <i class="fa fa-arrow-circle-right"></i></a>
	                                </div>
	                            </div>
	                       
                       
                       
                       
                       
                        </div>
                    </div>
                  <!-- -->
	               <div class="col-lg-4">
	                        <div class="panel panel-default" id="memberList">
	                            <div class="panel-heading">
	                                <h3 class="panel-title"><i class="fa fa-money fa-fw"></i> New Members list</h3>
	                            </div>
	                            <div class="panel-body">
	                                <div class="table-responsive">
	                                    {% block memberList %}
                                               <!-- top 10 new comment list  -->
                                                      <div class="table-responsive">
                                                            {% if memberList != NULL %}
                                                            <table class="table table-bordered table-hover table-striped">
                                                                <thead>
                                                                    <tr>
                                                                        <th>First Name</th>
                                                                        <th>Last Name</th>
                                                                         <th>Organization</th>
                                                                        
                                                                    </tr>
                                                                </thead>
                                                                <tbody>

                                                                        {% for item in memberList %}

                                                                           <tr>
                                                                               <td>{{item.firstName}}</td>
                                                                               <td>{{item.lastName}}</td>
                                                                               <td>{{item.organization}}</td>
                                                                           </tr>


                                                                        {%endfor%}



                                                                </tbody>
                                                            </table>
                                                            {%else%}
                                                                        {{newEventMessage}}
                                                            {%endif%}
                                                        </div>
                                            {% endblock %}
	                                </div>
	                                <div class="text-right">
	                                    <a href="memberList.html">View All Members <i class="fa fa-arrow-circle-right"></i></a>
	                                </div>
	                            </div>
	                       
                       
                       
                       
                       
                        </div>
                    </div>
                </div>
               <!-- row -->
               
 {% endblock %}