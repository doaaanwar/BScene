{% extends '::base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('bundles/acmebscene/css/meeting.css')}}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('bundles/acmebscene/css/jquery-ui.css')}}">
    <link rel="stylesheet" href="{{ asset('bundles/acmebscene/css/jquery-ui.min.css')}}">
     <link rel="stylesheet" href="{{ asset('bundles/acmebscene/css/jquery.timepicker.css')}}">
    <link rel="stylesheet" href="{{ asset('bundles/acmebscene/css/jbootstrap-multiselect.css')}}">
    <style>
 
        html, body, #map-canvas {
            height: 100%;
            margin: 0px;
            padding: 0px
        }
         .controls {
        margin-top: 16px;
        border: 1px solid transparent;
        border-radius: 2px 0 0 2px;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        height: 32px;
        outline: none;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
      }

      #pac-input {
        background-color: #fff;
        font-family: Roboto;
        font-size: 15px;
        font-weight: 300;
        margin-left: 12px;
        padding: 0 11px 0 13px;
        text-overflow: ellipsis;
        width: 400px;
      }

      #pac-input:focus {
        border-color: #4d90fe;
      }

      .pac-container {
        font-family: Roboto;
      }

      #type-selector {
        color: #fff;
        background-color: #4d90fe;
        padding: 5px 11px 0px 11px;
      }

      #type-selector label {
        font-family: Roboto;
        font-size: 13px;
        font-weight: 300;
      }
    </style>
    <link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <link rel="stylesheet" href="{{ asset('bundles/acmebscene/css/googleMapAPI.css')}}">
    <!---->


{% endblock %}
{% block body -%}
    <div>
        {% if matchCount > 1 %}
            <p class="text-danger">Warning!<p/>
            <h3 class="text-danger">There is another similar {{matchCount}} events will happen on the same day </h3>



        {%endif%}
        {% if matchCount > 0 %}
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>

                        <th>Title</th>
                        <th>Date</th>
                        <th>Time</th>

                        <th>Category</th>

                    </tr>
                </thead>
                <tbody>
                    {% for result in matchResults %}

                        <tr>

                            <td><a href="{{ path('meeting_show', { 'id': entity.id }) }}">{{ entity.title }}</td>
                            <td>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>

                            <td>{{ entity.category }}</td>

                            <td>{{ entity.venue.name }}</td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {% endif %}


    </div>
    <div>
        <h1>Confirm Event Detail</h1>



        <table class="table table-bordered table-hover table-striped">
            <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ entity.date|date('M d, Y')}}</td>
                </tr>
                <tr>
                    <th>Time</th>
                    <td>{{ entity.time|date('g:i a')}}</td>
                </tr>
                {% if entity.endDate != null%}
                    <tr>
                        <th>End Date</th>

                        <td>{{ entity.endDate|date('M d, Y')}}</td>


                    </tr>
                {% endif%}
                {% if entity.endTime != null%}
                    <tr>
                        <th>End Time</th>

                        <td>{{ entity.endTime|date('g:i a')}}</td>


                    </tr>
                {% endif%}
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ entity.category }}</td>
                </tr>
                <tr>
                    <th>Venue Capacity</th>
                    <td>{{ entity.capacity }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ entity.price }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>{{ entity.image }}</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div><h5>Location</h5></div>
                        <table id="address">
                            <tr>

                            <input class="field" hidden="true" id="name" name="name"/>
                            <input class="field" hidden="true" name="place_id" id="place_id"/>

                            <input class="field"  hidden="true" id="lng" name="lng"/>
                            <td class="label">Street address</td>

                            <td class="slimField"><input class="field" id="street_number"
                                                         disabled="true" name="street_number" value="{{entity.venue.address1}}"></input></td>
                            <td class="wideField" colspan="2"><input class="field" id="route"
                                                                     disabled="true" name="route" value="{{entity.venue.address2}}"></input></td>
                </tr>
                <tr>
                    <td class="label">City</td>
                    <td class="wideField" colspan="3"><input class="field" id="locality"
                                                             disabled="true" name="locality" value="{{entity.venue.city}} "></input></td>
                </tr>
                <tr>
                    <td class="label">Province</td>
                    <td class="slimField"><input class="field"
                                                 id="administrative_area_level_1" name="administrative_area_level_1" disabled="true" value="{{entity.venue.province}}"></input></td>
                    <td class="label">Zip code</td>
                    <td class="wideField"><input class="field" id="postal_code"
                                                 disabled="true" name="postal_code" value="{{entity.venue.postalcode}}"></input></td>
                </tr>
                <tr>
                    <td class="label">Country</td>
                    <td class="wideField" colspan="3"><input class="field"
                                                             id="country" disabled="true" name="country" value="{{entity.venue.country}}"></input></td>
                </tr>
        </table>
    </td>
</tr>
<tr>
    <td colspan="2">
        <div><h5>Event Speakers</h5></div>
        <div>
            {% if speakerCount > 0 %}
                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>Title</th>
                            <th>Speaker Name</th>
                            <th>Speaker Biography</th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for speaker in speakers %}

                            <tr>
                                <td>{{ speaker.title}}</td>
                                <td>{{ speaker.name }}</td>
                                <td>{{ speaker.biography }}</td>

                            </tr>
                        {% endfor %}

                    </tbody>
                </table>
            {% endif %}


        </div>

    </td>
</tr>
</tbofy>     
</table>
</div>

<div align="center">




    <a class="btn btn-warning" href="{{ path('meeting_edit', { 'id': entity.id }) }}">
        Edit Event
    </a>

    <a class="btn btn-warning" href="{{ path('meeting_show', { 'id': entity.id }) }}">
        Confirm Post Event
    </a>



</div>
{% endblock %}
