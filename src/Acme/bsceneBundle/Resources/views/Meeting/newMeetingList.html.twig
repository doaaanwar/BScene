{% extends 'adminLayout.html.twig' %}

{% block body -%}
    <h1>New Event Posted</h1>
    {% if count > 0 %}
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
               
                <th>Title</th>
                <th>Date</th>
                <th>Time</th>
               
                <th>Category</th>
                <th>Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
           
                <td><a href="{{ path('meeting_show', { 'id': entity.id }) }}">{{ entity.title }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.time %}{{ entity.time|date('H:i:s') }}{% endif %}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.capacity }}</td>
                <td>
               
                <a href="{{ path('meeting_edit', { 'id': entity.id }) }}">edit</a>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {%else%}
         {{errorMessage}}
    {% endif%}
       
    {% endblock %}