{% extends '::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/acmebscene/css/meeting.css')}}" rel="stylesheet">
{% endblock %}
    
{% block body -%}
    <div class="text-center">
    <h1>Create an Event</h1>
    <p class="lead">All fields marked with * are required</p>
    </div>
    {{ form_start(form) }}
    {{ form_errors(form) }}
   
    <div align='center'>
    <table>
        <tr>
            <td >{{ form_row(form.title) }}</td>
        </tr>
         <tr>
             <td>{{ form_row(form.date) }}</td>
        </tr>
        <tr>
             <td>{{ form_row(form.time) }}</td>
        </tr>
        
        <tr>
             <td >{{ form_row(form.endDate) }}</td>
        </tr>
        <tr>
             <td >{{ form_row(form.endTime) }}</td>
        </tr>
       
       
         <tr>
             <td>{{ form_row(form.capacity) }}</td>
        </tr>
          <tr>
             <td>{{ form_row(form.venue) }}</td>
        </tr>
        
        <tr>
             <td>{{ form_row(form.organization) }}</td>
        </tr>
         <tr>
             <td>{{ form_row(form.image) }}</td>
        </tr>
        
        <tr>
             <td>{{ form_row(form.category) }}</td>
        </tr>
        
        <tr>
            <td >
                <div id='TextBoxesGroup'>


                    <div id="TextBoxDiv1">

                            <label>Speaker #1 : </label><br>
                            <label>Name : </label><br><input type='textbox' id='textbox1' ><br>
                            <label>Title : </label><br><input type='textbox' id='textbox1' ><br>
                            <label>Biography :</label><br><input type='textbox' id='textbox1' >

                    </div>
                </div>
            </td>
           
        </tr>
        <tr>
            <td >
                 <input type='button' value='Add Speaker' id='addButton'>
            
           
                <input type='button' value='Remove' id='removeButton'>
            </td>
        </tr>
      
        
          <tr>
             <td  >{{ form_row(form.description) }}</td>
        </tr>
         <tr>
            <td colspan="3" class="text-center">
                {{ form_row(form._token) }}
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-warning'} }) }}
            </td>
        </tr>
    </table>
    </div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('meeting') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
 
    $(document).ready(function(){

        var counter = 2;

        $("#addButton").click(function () {

            if(counter>10){
                alert("Only 10 textboxes allow");
                return false;
            }   

            var newTextBoxDiv = $(document.createElement('div'))
                 .attr("id", 'TextBoxDiv' + counter);

            newTextBoxDiv.after().html('<label>Speaker #'+ counter + ' : </label><br>' +
                  '<label>Name : </label><input type="text" name="nameTextbox' + counter + 
                  '" id="nameTextbox' + counter + '" value="" ><br>'+
                  '<label>Title : </label><input type="text" name="titleTextbox' + counter + 
                  '" id="titleTextbox' + counter + '" value="" ><br>'+
                  '<label>Biography : </label><input type="text" name="bioTextbox' + counter + 
                  '" id="bioTextbox' + counter + '" value="" >');



                           
            newTextBoxDiv.appendTo("#TextBoxesGroup");


            counter++;
         });

         $("#removeButton").click(function () {
            if(counter==1){
              alert("No more textbox to remove");
              return false;
           }   

            counter--;

            $("#TextBoxDiv" + counter).remove();

         });

         $("#getButtonValue").click(function () {

            var msg = '';
            for(i=1; i<counter; i++){
              msg += "\n Textbox #" + i + " : " + $('#textbox' + i).val();
            }
              alert(msg);
         });
      });
    </script>
{%endblock%}
