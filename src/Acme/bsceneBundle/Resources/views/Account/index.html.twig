{% extends 'adminLayout.html.twig' %}

{% block stylesheets %}	
    <link href="{{ asset('bundles/acmebscene/css/account.css')}}" rel="stylesheet">
{% endblock %}
{% block nav %}
{% endblock %}

{% block header %}
{% endblock %}
    
{% block body %}
    <h1>Account list</h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
               
                <th>Username</th>
              
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
             
                <th>Businessphone</th>
                <th>Url</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>Province</th>
               
                <th>Membersince</th>
               
               
               
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
               
                <td>{{ entity.username }}</td>
             
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.email }}</td>
              
                <td>{{ entity.businessPhone }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.address1 }}</td>
                <td>{{ entity.address2 }}</td>
                <td>{{ entity.province }}</td>
               
                <td>{% if entity.memberSince %}{{ entity.memberSince|date('Y-m-d H:i:s') }}{% endif %}</td>
               
            </tr>
        {% endfor %}
        </tbody>
    </table>

 {% endblock %}
