{% extends '::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/acmebscene/css/account.css')}}" rel="stylesheet">
    {% endblock %}

{% block body -%}
    <h1>Create Account</h1>
    <p class="lead">All fields marked with * are required</p>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <table>
        <tr>
            <td class="text-left">{{ form_row(form.username) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.password) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.firstName) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.lastName) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.email) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.organization) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.businessPhone) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.url) }}</td>
        </tr>        
        <tr>
            <td class="text-left">{{ form_row(form.address1) }}</td>
        </tr>        
        <tr>
            <td class="text-left">{{ form_row(form.address2) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.city) }}</td>
        </tr>
        <tr>
            <td class="text-left">{{ form_row(form.province) }}</td>
        </tr>
        <tr>
            <td colspan="3" class="text-center">
                {{form_row(form.backupEmail)}}
                {{form_row(form.paymentAmount)}}
                {{form_row(form.memberSince)}}
                {{form_row(form.isAdmin)}}
                {{form_row(form.lastLogin)}}
                {{form_row(form.status)}}
                {{ form_row(form._token) }}
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-warning'} }) }}
            </td>
        </tr>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('account') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
