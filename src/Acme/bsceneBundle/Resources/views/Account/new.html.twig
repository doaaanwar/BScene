            <td class="text-left">{{ form_errors(form.username) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.password) }}</th>
            <td class="text-left">{{ form_widget(form.password) }}</td>
            <td class="text-left">{{ form_errors(form.password) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.firstName) }}</th>
            <td class="text-left">{{ form_widget(form.firstName) }}</td>
            <td class="text-left">{{ form_errors(form.firstName) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.lastName) }}</th>
            <td class="text-left">{{ form_widget(form.lastName) }}</td>
            <td class="text-left">{{ form_errors(form.lastName) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.email) }}</th>
            <td class="text-left">{{ form_widget(form.email) }}</td>
            <td class="text-left">{{ form_errors(form.email) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.backupEmail) }}</th>
            <td class="text-left">{{ form_widget(form.backupEmail) }}</td>
            <td class="text-left">{{ form_errors(form.backupEmail) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.businessPhone) }}</th>
            <td class="text-left">{{ form_widget(form.businessPhone) }}</td>
            <td class="text-left">{{ form_errors(form.businessPhone) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.url) }}</th>
            <td class="text-left">{{ form_widget(form.url) }}</td>
