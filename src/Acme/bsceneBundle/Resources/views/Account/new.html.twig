            <th class="text-right">{{ form_label(form.address2) }}</th>
            <td class="text-left">{{ form_widget(form.address2) }}</td>
            <td class="text-left">{{ form_errors(form.address2) }}</td>
        </tr>
        <tr>
            <th class="text-right">{{ form_label(form.province) }}</th>
            <td class="text-left">{{ form_widget(form.province) }}</td>
            <td class="text-left">{{ form_errors(form.province) }}</td>
        </tr>
        <tr>
            <td colspan="3" class="text-center">{{ form_widget(form.submit) }}</td>
        </tr>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('account') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
