{% extends '::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}


{% block body -%}
    <h1>Account creation</h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <table>
        <tr>
            <th class="text-right">{{ form_label(form.username) }}</th>
