{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Eventful list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Eventfulorgid</th>
                <th>Eventfulurl</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('eventful_show', { 'id': entity.event }) }}">{{ entity.eventfulOrgId }}</a></td>
                <td>{{ entity.eventfulUrl }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('eventful_show', { 'id': entity.event }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('eventful_edit', { 'id': entity.event }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('eventful_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
